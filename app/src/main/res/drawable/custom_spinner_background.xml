<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Set the background color for the Spinner -->
            <solid android:color="#FF5733" /> <!-- Change to your desired background color -->
            <corners android:radius="4dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <item android:right="8dp">
        <!-- Add an arrow icon to the right side of the Spinner -->
        <bitmap
            android:src="@drawable/baseline_arrow_drop_down_24"
            android:gravity="end"
            android:tint="@color/black" /> <!-- Change to your desired arrow color -->
    </item>
</layer-list>
